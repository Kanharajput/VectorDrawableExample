<animated-vector
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:aapt="http://schemas.android.com/aapt">
    <aapt:attr name="android:drawable">
        <vector
            android:name="vector"
            android:width="24dp"
            android:height="24dp"
            android:viewportWidth="24"
            android:viewportHeight="24">
            <group
                android:name="rotate_pause"
                android:pivotX="12"
                android:pivotY="12">
                <path
                    android:name="pause_path"
                    android:pathData="M 6 19 L 10 19 L 10 5 L 6 5 L 6 19 Z M 14 5 L 14 19 L 18 19 L 18 5 L 14 5 Z"
                    android:fillColor="#000000"/>
            </group>
        </vector>
    </aapt:attr>
    <target android:name="rotate_pause">
        <aapt:attr name="android:animation">
            <objectAnimator
                android:propertyName="rotation"
                android:duration="200"
                android:valueFrom="-180"
                android:valueTo="0"
                android:valueType="floatType"
                android:interpolator="@android:interpolator/fast_out_slow_in"/>
        </aapt:attr>
    </target>
    <target android:name="pause_path">
        <aapt:attr name="android:animation">
            <objectAnimator
                android:propertyName="pathData"
                android:startOffset="100"
                android:duration="100"
                android:valueFrom="M 10 5 L 6 5 L 6 12 L 6 19 L 6 19 L 10 19 L 10 14.333 L 10 9.667 L 10 5 M 14 5 L 18 5 L 18 19 L 14 19 L 14 5 L 14 5"
                android:valueTo="M 8 5 L 8 9.667 L 8 12.224 L 8 12.224 L 8 14.333 L 8 19 L 19 12 L 19 12 L 8 5 M 16 12 L 16 12 L 16 12 L 16 12 L 16 12 L 16 12"
                android:valueType="pathType"
                android:interpolator="@android:interpolator/fast_out_slow_in"/>
        </aapt:attr>
    </target>
</animated-vector>
